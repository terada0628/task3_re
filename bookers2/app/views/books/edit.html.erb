<% if @book.errors.any? %>
 <div id="error_explanation">
  <h4 class="text-danger"><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="text-danger"><%= message %></li>
    <% end %>
  </ul>
 </div>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
    <%= form_with model:@book,local:true do |f| %>
    <div class="form-group">
      <label for= "inputTitle">Title</label><br>
      <%= f.text_field :title,autofocus: true %>
    </div>
    <div class="form-group">
      <label for= "inputBody">Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Book",class:"btn btn-success" %>
    </div>
    <% end %>
    <%= link_to "Show",book_path(@book) %>|<%= link_to "Back",books_path %>
  </div>
 </div>
</div>

