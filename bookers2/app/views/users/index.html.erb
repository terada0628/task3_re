<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/book',user:@user,book:@new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user,:profile_image, :fill,40,40, format:'jpeg', fallback:"no_image.jpg" %></td>
            <td><%= user.name%></td>
            <td><%= link_to "Show",user_path(user) %></td>
            <td>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-success" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-primary" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
